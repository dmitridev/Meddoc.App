                </Grid>
                <Grid Grid.Row="1" Height="46">
                    <TextBlock x:Name="Name" FontSize="46px" FontFamily="/Fonts/Raleway-Bold.ttf #Raleway Bold" Text="Не указано"/>
                </Grid>
