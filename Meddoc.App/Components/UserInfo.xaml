<Page x:Class="Meddoc.App.Forms.UserInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Meddoc.App.Forms"
      mc:Ignorable="d" 
      d:DesignHeight="986" d:DesignWidth="1539"
      Background="White"
      Title="UserInfo">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" >
                <Image Width="400" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="100,120,0,0" Height="310" Source="/Components/Ellipse 1.png" x:Name="Logo" />
            </Grid>
            <Grid Grid.Column="1" Margin="0,140,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="0,20,0,20">
                    <StackPanel>
                        <Grid>
                            <TextBlock Text="Профиль" Margin="10" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#1675E4" FontFamily="/Fonts/Raleway-Medium.ttf #Raleway Medium" />
                            <Button BorderThickness="0" FontFamily="/Fonts/Raleway-SemiBold.ttf #Raleway SemiBold" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Right" Content="Редактировать" Width="219" Height="40">
                                <Button.Resources>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="CornerRadius" Value="4"/>
                                    </Style>
                                </Button.Resources>
                            </Button>
                        </Grid>
                        <TextBlock x:Name="Name" FontSize="46" Text="Николаенко Николай Николаевич" FontFamily="/Fonts/Raleway-Bold.ttf #Raleway Bold"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Должность:" FontFamily="/Fonts/Raleway-SemiBold.ttf #Raleway SemiBold" FontSize="18px" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                                <TextBlock Text="Дата рождения:" FontFamily="/Fonts/Raleway-SemiBold.ttf #Raleway SemiBold" FontSize="18px" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1">
                                <TextBlock x:Name="Work" FontFamily="/Fonts/Raleway-SemiBold.ttf #Raleway SemiBold" Text="Заведующий отделом терапии" FontSize="18"/>
                                <TextBlock x:Name="DateBirth" FontFamily="/Fonts/Raleway-SemiBold.ttf #Raleway SemiBold" Text="22.05.1978" FontSize="18px"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>

                    <!--<TextBlock Text="Профиль" Foreground="#1675E4" FontSize="18" VerticalAlignment="Center"/>
                    <Button BorderThickness="0" 
